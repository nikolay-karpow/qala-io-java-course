    <!--</bean>-->

    <jee:jndi-lookup id="dataSource" jndi-name="db/DataSource" expected-type="javax.sql.DataSource" />

    <!--<bean id="dataSource" class="com.mchange.v2.c3p0.DataSources" factory-method="pooledDataSource" >-->
